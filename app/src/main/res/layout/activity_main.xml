<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="100dp"
        app:rowCount="5"
        app:columnCount="3">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:srcCompat="@drawable/vazio" />

        <ImageView
            android:padding="5dp"
            android:id="@+id/imageView2"
            app:layout_columnWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/vazio"
            app:layout_column="1"
            app:layout_row="0"
            />

        <ImageView
            android:padding="5dp"
            android:id="@+id/imageView3"
            app:layout_columnWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/vazio"
            app:layout_column="2"
            app:layout_row="0"
            />

        <ImageView
            android:padding="5dp"
            android:id="@+id/imageView4"
            app:layout_columnWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/vazio"
            app:layout_column="0"
            app:layout_row="1"/>

        <ImageView
            android:padding="5dp"
            android:id="@+id/imageView5"
            app:layout_columnWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/vazio"
            app:layout_column="1"
            app:layout_row="1"
            />

        <ImageView
            android:padding="5dp"
            android:id="@+id/imageView6"
            app:layout_columnWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/vazio"
            app:layout_column="2"
            app:layout_row="1"
            />

        <ImageView
            android:padding="5dp"
            android:id="@+id/imageView7"
            app:layout_columnWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/vazio"
            app:layout_column="0"
            app:layout_row="2"
            />

        <ImageView
            android:padding="5dp"
            android:id="@+id/imageView8"
            app:layout_columnWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/vazio"
            app:layout_column="1"
            app:layout_row="2"
            />

        <ImageView
            android:padding="5dp"
            android:id="@+id/imageView9"
            app:layout_columnWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/vazio"
            app:layout_column="2"
            app:layout_row="2"
            />

        <TextView
            android:id="@+id/circle_wins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textAlignment="center"
            app:layout_column="0"
            app:layout_row="3"
            app:layout_columnWeight="1"
            />

        <TextView
            android:id="@+id/draws"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textAlignment="center"
            app:layout_column="1"
            app:layout_row="3"
            app:layout_columnWeight="1"/>

        <TextView
            android:id="@+id/x_wins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textAlignment="center"
            app:layout_column="2"
            app:layout_row="3"
            app:layout_columnWeight="1"
            />

    </android.support.v7.widget.GridLayout>

    <Button
        android:id="@+id/buttonSair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="btnSair"
        android:text="Sair" />


</android.support.constraint.ConstraintLayout>